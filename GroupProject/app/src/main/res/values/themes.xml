<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroupProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/tomato</item>
        <item name="colorPrimaryVariant">@color/tomato</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/fire_bush</item>
        <item name="colorSecondaryVariant">@color/soya_bean</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status brand color -->
        <item name="android:statusBarColor">@color/tomato</item>

        <!-- More Custom theme here -->
    </style>

    <!--    <style name="Theme.Library" parent="Base.Theme.Library" />-->

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>